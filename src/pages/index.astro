---
import Layout from '../layouts/Layout.astro';

const product = {
  name: "PosturePro Corrector",
  price: 59.99,
  sku: "POSTURE-001",
  image: "/product.svg",
  description: "Adjustable posture support brace"
};
---

<Layout
  title="PosturePro | Adjustable Posture Corrector"
  description="Adjustable posture corrector designed to help relieve back discomfort. Free US shipping. 30-day return policy."
>
  <!-- Simple Header -->
  <header class="border-b border-slate-200 bg-white">
    <div class="max-w-5xl mx-auto px-4 py-5 flex justify-between items-center">
      <a href="/" class="text-xl font-semibold text-slate-800 tracking-tight">PosturePro</a>
      <nav class="flex items-center gap-6">
        <a href="/shipping" class="text-sm text-slate-600 hover:text-slate-900">Shipping</a>
        <a href="/contact" class="text-sm text-slate-600 hover:text-slate-900">Contact</a>
        <button class="snipcart-checkout text-slate-600 hover:text-slate-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </button>
      </nav>
    </div>
  </header>

  <!-- Product Section -->
  <section class="max-w-5xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 gap-16 items-start">

      <!-- Product Image -->
      <div>
        <div class="bg-slate-50 rounded-lg p-12">
          <img
            src="/product.svg"
            alt="PosturePro Corrector"
            class="w-full max-w-sm mx-auto"
          />
        </div>
        <p class="text-xs text-slate-400 text-center mt-4">Product illustration. Actual product may vary slightly.</p>
      </div>

      <!-- Product Info -->
      <div>
        <p class="text-sm text-slate-500 mb-2">Posture Support</p>
        <h1 class="text-3xl font-medium text-slate-900 mb-4">
          PosturePro Adjustable Corrector
        </h1>

        <p class="text-slate-600 mb-8 leading-relaxed">
          A lightweight, adjustable brace designed to gently encourage better posture during daily activities.
          Made with breathable materials for extended wear.
        </p>

        <!-- Price -->
        <div class="mb-8">
          <span class="text-2xl font-medium text-slate-900">${product.price}</span>
          <span class="text-sm text-slate-500 ml-2">Free US shipping</span>
        </div>

        <!-- What's Included -->
        <div class="border-t border-slate-200 pt-6 mb-8">
          <h3 class="text-sm font-medium text-slate-900 mb-4">What's included</h3>
          <ul class="space-y-2 text-sm text-slate-600">
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              1x PosturePro adjustable corrector
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Sizing guide and usage instructions
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-4 h-4 text-slate-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Storage pouch
            </li>
          </ul>
        </div>

        <!-- Size Selector -->
        <div class="mb-8">
          <label class="text-sm font-medium text-slate-900 mb-3 block">Size</label>
          <div class="grid grid-cols-2 gap-3" id="size-selector">
            <button class="size-btn p-4 border border-slate-200 rounded-md hover:border-slate-400 transition text-left" data-size="S/M">
              <div class="font-medium text-slate-900">S/M</div>
              <div class="text-xs text-slate-500 mt-1">Chest: 28-36 inches</div>
            </button>
            <button class="size-btn p-4 border-2 border-slate-900 rounded-md text-left" data-size="L/XL">
              <div class="font-medium text-slate-900">L/XL</div>
              <div class="text-xs text-slate-500 mt-1">Chest: 36-48 inches</div>
            </button>
          </div>
          <p class="text-xs text-slate-500 mt-3">Measure around your chest, just below armpits. When between sizes, size up.</p>
        </div>

        <!-- Add to Cart -->
        <button
          class="snipcart-add-item w-full bg-slate-900 hover:bg-slate-800 text-white font-medium py-4 px-6 rounded-md transition"
          data-item-id={product.sku}
          data-item-price={product.price}
          data-item-url="/"
          data-item-description={product.description}
          data-item-image="/product.svg"
          data-item-name={product.name}
          data-item-custom1-name="Size"
          data-item-custom1-options="S/M|L/XL[+0.00]"
          data-item-custom1-value="L/XL"
        >
          Add to Cart
        </button>

        <!-- Policies -->
        <div class="mt-6 pt-6 border-t border-slate-200">
          <div class="grid grid-cols-3 gap-4 text-center">
            <div>
              <div class="text-xs font-medium text-slate-900">Free Shipping</div>
              <div class="text-xs text-slate-500">US orders</div>
            </div>
            <div>
              <div class="text-xs font-medium text-slate-900">30-Day Returns</div>
              <div class="text-xs text-slate-500">No questions</div>
            </div>
            <div>
              <div class="text-xs font-medium text-slate-900">Secure Payment</div>
              <div class="text-xs text-slate-500">SSL encrypted</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Details -->
  <section class="bg-slate-50 py-16">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-xl font-medium text-slate-900 mb-8">Product Details</h2>

      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h3 class="text-sm font-medium text-slate-900 mb-4">Materials</h3>
          <ul class="text-sm text-slate-600 space-y-2">
            <li>Neoprene blend outer shell</li>
            <li>Breathable mesh lining</li>
            <li>Adjustable velcro straps</li>
            <li>Reinforced stitching at stress points</li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-medium text-slate-900 mb-4">Care Instructions</h3>
          <ul class="text-sm text-slate-600 space-y-2">
            <li>Hand wash with mild soap</li>
            <li>Air dry only, do not tumble dry</li>
            <li>Do not iron or bleach</li>
            <li>Store flat or rolled</li>
          </ul>
        </div>
      </div>

      <div class="mt-12 pt-12 border-t border-slate-200">
        <h3 class="text-sm font-medium text-slate-900 mb-4">How to Use</h3>
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <div class="text-xs text-slate-400 mb-2">Step 1</div>
            <p class="text-sm text-slate-600">Slip arms through loops like a backpack. The main panel should rest against your mid-back.</p>
          </div>
          <div>
            <div class="text-xs text-slate-400 mb-2">Step 2</div>
            <p class="text-sm text-slate-600">Adjust the front straps until snug but not restrictive. You should be able to breathe normally.</p>
          </div>
          <div>
            <div class="text-xs text-slate-400 mb-2">Step 3</div>
            <p class="text-sm text-slate-600">Start with 15-30 minutes daily. Gradually increase as your muscles adapt.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Honest Expectations -->
  <section class="py-16">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-xl font-medium text-slate-900 mb-8">What to Expect</h2>

      <div class="prose prose-slate max-w-none">
        <p class="text-slate-600 leading-relaxed mb-6">
          A posture corrector is a tool, not a cure. It works by providing physical feedback when you slouch,
          helping train your muscles to maintain better alignment over time.
        </p>

        <p class="text-slate-600 leading-relaxed mb-6">
          Most people find it takes 2-4 weeks of consistent use to notice improvements in their posture habits.
          Results vary based on individual factors including how often you wear it and your starting posture.
        </p>

        <div class="bg-slate-50 rounded-lg p-6 my-8">
          <h3 class="text-sm font-medium text-slate-900 mb-3">This product may help with:</h3>
          <ul class="text-sm text-slate-600 space-y-2">
            <li>Providing gentle posture reminders during desk work</li>
            <li>Building awareness of your body position</li>
            <li>Supporting your shoulders in a neutral position</li>
          </ul>
        </div>

        <div class="bg-amber-50 border border-amber-200 rounded-lg p-6">
          <h3 class="text-sm font-medium text-amber-900 mb-3">Important Note</h3>
          <p class="text-sm text-amber-800">
            This product is not a medical device and is not intended to diagnose, treat, cure, or prevent
            any disease. If you have chronic back pain or a medical condition, please consult a healthcare
            professional before use.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="bg-slate-50 py-16">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="text-xl font-medium text-slate-900 mb-8">Common Questions</h2>

      <div class="space-y-6">
        <div class="border-b border-slate-200 pb-6">
          <h3 class="text-sm font-medium text-slate-900 mb-2">How long does shipping take?</h3>
          <p class="text-sm text-slate-600">US orders typically arrive in 3-5 business days. We ship from our US warehouse via USPS.</p>
        </div>

        <div class="border-b border-slate-200 pb-6">
          <h3 class="text-sm font-medium text-slate-900 mb-2">Can I wear it under clothes?</h3>
          <p class="text-sm text-slate-600">Yes, it's designed to be worn under most shirts. The slim profile makes it relatively discreet, though some outlines may be visible with tight clothing.</p>
        </div>

        <div class="border-b border-slate-200 pb-6">
          <h3 class="text-sm font-medium text-slate-900 mb-2">How do I know if it's the right size?</h3>
          <p class="text-sm text-slate-600">Measure your chest circumference just below your armpits. S/M fits 28-36 inches, L/XL fits 36-48 inches. If you're between sizes, we recommend sizing up for comfort.</p>
        </div>

        <div class="border-b border-slate-200 pb-6">
          <h3 class="text-sm font-medium text-slate-900 mb-2">What's your return policy?</h3>
          <p class="text-sm text-slate-600">We offer a 30-day return policy. If you're not satisfied, email us for a return label. Refunds are processed within 5-7 business days of receiving the return.</p>
        </div>

        <div class="pb-6">
          <h3 class="text-sm font-medium text-slate-900 mb-2">Is this suitable for everyone?</h3>
          <p class="text-sm text-slate-600">This corrector is designed for adults without serious spinal conditions. If you have scoliosis, herniated discs, or other medical conditions, please consult your doctor first.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="border-t border-slate-200 py-12">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-8 mb-8">
        <div>
          <div class="font-semibold text-slate-800 mb-4">PosturePro</div>
          <p class="text-sm text-slate-500">Simple posture support for everyday use.</p>
        </div>
        <div>
          <h4 class="text-sm font-medium text-slate-900 mb-4">Shop</h4>
          <ul class="space-y-2 text-sm text-slate-500">
            <li><a href="/" class="hover:text-slate-900">Product</a></li>
            <li><a href="/shipping" class="hover:text-slate-900">Shipping</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-medium text-slate-900 mb-4">Support</h4>
          <ul class="space-y-2 text-sm text-slate-500">
            <li><a href="/contact" class="hover:text-slate-900">Contact</a></li>
            <li><a href="/refunds" class="hover:text-slate-900">Returns</a></li>
          </ul>
        </div>
        <div>
          <h4 class="text-sm font-medium text-slate-900 mb-4">Legal</h4>
          <ul class="space-y-2 text-sm text-slate-500">
            <li><a href="/privacy" class="hover:text-slate-900">Privacy Policy</a></li>
          </ul>
        </div>
      </div>
      <div class="pt-8 border-t border-slate-200 text-center text-sm text-slate-400">
        <p>2026 PosturePro. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Size selector script -->
  <script>
    document.querySelectorAll('.size-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        document.querySelectorAll('.size-btn').forEach(b => {
          b.classList.remove('border-2', 'border-slate-900');
          b.classList.add('border', 'border-slate-200');
        });
        e.currentTarget.classList.remove('border', 'border-slate-200');
        e.currentTarget.classList.add('border-2', 'border-slate-900');

        const size = e.currentTarget.dataset.size;
        document.querySelectorAll('.snipcart-add-item').forEach(addBtn => {
          addBtn.dataset.itemCustom1Value = size;
        });
      });
    });
  </script>
</Layout>
